      <option value="<%= @character.armor_proficiencies %>">Heavy Armor</option>
    </select> Current Armor Proficiency: <b><%= @character.armor_proficiencies.capitalize %></b><br><br>
    </fieldset><br>

    <fieldset>
    <legend>Languages:</legend>
    <select>
      <option value="<%= @character.languages %>">Common</option>
      <option value="<%= @character.languages %>">Dwarvish</option>
      <option value="<%= @character.languages %>">Elvish</option>
      <option value="<%= @character.languages %>">Gnomish</option>
      <option value="<%= @character.languages %>">Goblin</option>
      <option value="<%= @character.languages %>">Halfling</option>
      <option value="<%= @character.languages %>">Orc</option><br/>
    </select> Current Language: <b><%= @character.languages.capitalize %></b><br><br>
    </fieldset>
    <br>
    <fieldset>
     <legend>Existing Players</legend>
      <% @players.each do |player| %>
        <input type="checkbox" name="character[player_id]" id="<%= player.id %>" value="<%= player.id %>"><%= player.name %><br>
      <% end %>
      </fieldset>
    <br>
    <input type="submit" value="Update Character Sheet">
  </form>
  