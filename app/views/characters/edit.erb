    </select> Current Charisma: <b>+<%= @character.character_charisma %></b><br><br>
    </fieldset><br>
    <fieldset><br>
    <legend><b>PROFICIENCIES:</b></legend>
    <label>Weapon Proficiencies:</label>
    <select name="character[weapon_proficiencies]">
      <option value="<%= @character.weapon_proficiencies %>">Simple Weapons</option>
      <option value="<%= @character.weapon_proficiencies %>">Martial Weapons</option>
      <option value="<%= @character.weapon_proficiencies %>">Exotic Weapons</option>
